#
# wm independent hotkeys
#

# Terminal emulator
super + Return
	st

# Program launcher
super + @space
	dmenu_run

# Reload sxhd config files
super + Escape
	pkill -USR1 -x sxhkd

# Media Keys
XF86AudioRaiseVolume
    amixer set Master -q 5%+
XF86AudioLowerVolume
    amixer set Master -q 5%-
XF86AudioMute
    pactl set-sink-mute 0 toggle

# Brightness keys
XF86MonBrightnessUp
    xbacklight -inc 5
XF86MonBrightnessDown
    xbacklight -dec 5
